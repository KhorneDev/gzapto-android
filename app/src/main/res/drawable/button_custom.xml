<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#00FF00" /> <!-- Color de fondo cuando se presiona -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" /> <!-- Color de fondo predeterminado -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
</selector>